<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:orientation="vertical">

	<LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
		<ToggleButton android:id="@+id/server_switch" android:layout_width="wrap_content" android:layout_height="fill_parent"
			android:layout_margin="6dp" android:layout_weight="1" />
		<EditText android:id="@+id/server_name" android:singleLine="true" android:capitalize="words" android:hint="server name"
			android:layout_width="wrap_content" android:layout_height="fill_parent" android:layout_margin="6dp"
			android:layout_weight="100" />
	</LinearLayout>

	<TextView android:text="@+string/movie_hint" android:layout_width="fill_parent" android:layout_height="18dp" />
	<Spinner android:id="@+id/server_movie" android:layout_width="fill_parent" android:layout_height="wrap_content" />
	<TextView android:text="@+string/ticket_hint" android:layout_width="fill_parent" android:layout_height="18dp" />
	<Spinner android:id="@+id/ticket_size" android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:hint="@string/ticket_hint" />
	<TextView android:text="@+string/image_hint" android:layout_width="fill_parent" android:layout_height="18dp" />
	<Spinner android:id="@+id/image_selector" android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:hint="@string/image_hint" />
	<Button android:id="@+id/server_client" android:text="Start client" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:enabled="false" />

	<ListView android:id="@+id/server_client_list" android:layout_width="fill_parent" android:layout_height="fill_parent" />

</LinearLayout>
