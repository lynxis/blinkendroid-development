<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/setownerLayout"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android">

	<TextView android:id="@+id/label" android:layout_width="fill_parent"
		android:layout_height="wrap_content" />
	<EditText android:id="@+id/ownernameText"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:background="@android:drawable/editbox_background"
		android:layout_below="@id/label" />

	<Button android:id="@+id/okButton" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_below="@id/ownernameText"
		android:layout_centerHorizontal="true" android:text="OK" />
</RelativeLayout>
